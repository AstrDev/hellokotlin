<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:paddingLeft="@dimen/global_spacing_xs"
			  android:paddingRight="@dimen/global_spacing_xs">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/global_spacing_xs"
		android:layout_marginTop="@dimen/global_spacing_xs"
		android:orientation="vertical">

		<TextView
			android:id="@+id/fragment_main_task_item_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/HelloKotlin.TextAppearance.Title"
			tools:text="Title"/>

		<TextView
			android:id="@+id/fragment_main_task_item_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/global_spacing_xxxs"
			android:textAppearance="@style/HelloKotlin.TextAppearance.Text"
			tools:text="Text"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/global_divider_color"/>

</LinearLayout>